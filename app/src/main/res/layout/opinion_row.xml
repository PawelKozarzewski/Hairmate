<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opinion_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/images"
            android:layout_gravity="center_vertical"
            android:padding="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/opinion_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Tytul Opinii"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/opinion_item_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Goraco polecam ten salon spaniala oblsuga i wdsfdsfsdfdf"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/opinion_item_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autor: Monika"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/opinion_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dodano: 12.01.2018"
                        android:padding="3dp"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/photo_info"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Załączone zdjęcie"/>

        <ImageView
            android:id="@+id/opinion_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/images"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

    </LinearLayout>
</LinearLayout>