<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/main_activity_logo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="15dp"
            android:src="@drawable/hairdresser"/>
    </LinearLayout>

    <TextView
        android:id="@+id/main_activity_text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:text="@string/main_text"/>

    <AutoCompleteTextView
        android:id="@+id/main_activity_city_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/find_hint"
        android:padding="10dp"
        android:ems="10"
        android:maxLines="1"
        android:background="@drawable/edit_text_background" />
    <requestFocus />
    <Button
        android:id="@+id/main_activity_search_button"
        android:background="@drawable/button_background"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_button"/>

    <Button
        android:id="@+id/main_activity_login_button"
        android:background="@android:color/transparent"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logowanie"/>

    <Button
        android:id="@+id/main_activity_profile_button"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"/>
    <Button
        android:id="@+id/main_activity_register_button"
        android:background="@android:color/transparent"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejestracja"/>

</LinearLayout>