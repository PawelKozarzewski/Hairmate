<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/register_activity_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="15dp"
            android:src="@drawable/hairdresser"/>
    </LinearLayout>

    <TextView
        android:id="@+id/register_activity_text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:text="@string/main_text"/>

    <EditText
        android:id="@+id/login_register"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Email"/>
    <EditText
        android:id="@+id/password_register"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Hasło"/>

    <EditText
        android:id="@+id/name_register"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Imię"/>
    <EditText
        android:id="@+id/surname_register"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:hint="Nazwisko"/>


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/client_radio">
            <RadioButton
                android:id="@+id/client_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klient"/>

            <RadioButton
                android:id="@+id/owner_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Właściciel"/>
        </RadioGroup>


    <Button
        android:id="@+id/reg_btn"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejestracja"/>



</LinearLayout>